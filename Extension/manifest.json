{
  "manifest_version": 2,
  "name": "Link Selector",
  "version": "1.0",
  "description": "Selects a link on the current webpage",
  "permissions": ["activeTab", "webNavigation"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
